{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lastking.local/schemas/config-change-audit.schema.json",
  "title": "Lastking Config Change Audit Record Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "actor",
    "timestamp",
    "file",
    "change_summary",
    "writer_source"
  ],
  "properties": {
    "actor": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[A-Za-z0-9._@\\-]+$",
      "description": "Who made the configuration change"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "UTC ISO-8601 timestamp"
    },
    "file": {
      "type": "string",
      "minLength": 1,
      "maxLength": 260,
      "description": "Relative file path changed"
    },
    "change_summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "description": "One-line summary of what changed"
    },
    "review_status": {
      "type": "string",
      "enum": [
        "pending",
        "approved",
        "rejected"
      ]
    },
    "reviewer": {
      "type": "string",
      "maxLength": 100
    },
    "reviewed_at": {
      "type": "string",
      "format": "date-time"
    },
    "branch": {
      "type": "string",
      "maxLength": 120
    },
    "commit": {
      "type": "string",
      "pattern": "^[a-fA-F0-9]{7,40}$"
    },
    "impact_scope": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "difficulty",
          "spawn",
          "enemy",
          "reward",
          "economy",
          "other"
        ]
      },
      "uniqueItems": true
    },
    "linked_kpi": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 80
      },
      "uniqueItems": true
    },
    "notes": {
      "type": "string",
      "maxLength": 1000
    },
    "writer_source": {
      "type": "string",
      "const": "script-only",
      "description": "Audit record must be generated by script-only pipeline."
    }
  },
  "allOf": [
    {
      "if": {
        "required": [
          "review_status"
        ],
        "properties": {
          "review_status": {
            "const": "approved"
          }
        }
      },
      "then": {
        "required": [
          "reviewer",
          "reviewed_at"
        ]
      }
    }
  ]
}
